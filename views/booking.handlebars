<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="/style.css" type="text/css" rel="stylesheet" />
    </head>
    <body>

        <div class="navbar">
            <h1>CANARY REPAIRS</h1>
            <ul>
                <li><a href="/welcome">Home</a></li>
                <li><a href="/jobList">Joblist</a></li>
                <li><a href="/pendingJobs">Pending Jobs</a></li>
                <li><a href="/logout">Sign out</a></li>
            </ul>
        </div>

        <section class="booking-page">
            <div class="form">
                <form class="booking-form" method="POST" action="/book">
                    <table class="job" align="left">
                        <tr><th>Report ID</th><th>Customer Name</th><th>Customer Address</th><th>Appliance Type</th><th>Appliance Age</th><th>Manufacturer</th></tr>
                        
                        {{#each reported}}
                            <tr><td>{{this.reportID}}</td><td>{{this.customerName}}</td><td>{{this.customerAddress}}</td><td>{{this.applianceType}}</td><td>{{this.applianceAge}}</td><td>{{this.manufacturer}}</td></tr>
                        {{/each}}

                    </table>
                    <div class="book-info">
                        <label for="technicianName">Technician Name:</label>
                        <input type="text" name="technicianName">
                    </div>
                    <div class="book-info">
                        <label for="pQuote">Provide Quote:</label>
                        <input type="text" name="quote">
                    </div>
                    <div class="book-info">
                        <label for="dTime">Assign date and time (2hr block):</label>
                        <input type="datetime-local" name="datetime">
                    </div>
                    
                    <input class="btn" type="submit">
                    
                </form>

            </div>
        </section>
        
        <footer>&copy Copyright 2019 Canary Repairs</footer>

    </body>
</html>