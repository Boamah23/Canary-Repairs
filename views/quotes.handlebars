<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Quotes</title>
</head>
<body>
    

    <div class="navbar">
        <h1>CANARY REPAIRS</h1>
        <ul>
            <li><a href="/welcome">Home</a></li>
            <li><a href="/reports">Report</a></li>
            <li><a href="/custJoblist">Joblist</a></li>
            <li><a class="active" href="/quotes">Quotes</a></li>
            <li><a href="/logout">Sign out</a></li>
        </ul>
    </div>    


    <section class="quote-page"> 
        <div class="quoteRequest">
            <form class="request" action="">
                <table class="offers">
                    <tr><th>Report ID</th><th>Technician Name</th><th>Status</th><th>Quote</th><th>Proposed date and time</th><th></th><th></th></tr>
                            
                    {{#each requested}}
                        <tr><td>{{this.reportID}}</td><td>{{this.technicianName}}</td><td>{{this.status}}</td><td>{{this.quote}}</td><td>{{this.datetime}}</td><td><a id="accept" href="/accept/{{this.reportID}}">Accept</a></td><td><a id="deny" href="/deny/{{this.reportID}}">Deny</a></td></tr>
                    {{/each}}
                </table>
            </form>
        </div>

    </section>


    <footer>&copy Copyright 2019 Canary Repairs</footer>
</body>
</html>