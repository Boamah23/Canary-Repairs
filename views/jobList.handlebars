<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Job List</title>
</head>
<body>
    

    <div class="navbar">
        <h1>CANARY REPAIRS</h1>
        <ul>
            <li><a href="/welcome">Home</a></li>
            <li><a class="active" href="/jobList">Joblist</a></li>
            <li><a href="/pendingJobs">Pending Jobs</a></li>
            <li><a href="/logout">Sign out</a></li>
        </ul>
    </div>


    <section class="jobList">
        <table>
            <tr><th>Customer Name</th><th>Customer Address</th><th>Appliance Type</th><th>Appliance Age</th><th>Manufacturer</th><th>Fault Description</th><th></th></tr>
            {{#each reported}}
                <tr><td>{{this.customerName}}</td><td>{{this.customerAddress}}</td><td>{{this.applianceType}}</td><td>{{this.applianceAge}}</td><td>{{this.manufacturer}}</td><td>{{this.faultDescription}}</td><td><a id="accept" href="/booking/{{this.reportID}}">book</a></td></tr>
            {{/each}}
        </table>

    </section>


    <footer>&copy Copyright 2019 Canary Repairs</footer>
</body>
</html>